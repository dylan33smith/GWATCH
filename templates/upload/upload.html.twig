{% extends 'gwatch/base.html.twig' %}

{% block title %}Upload Data - SONGBIRD{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Upload Module Data</h2>
    
    {% for message in app.flashes('upload_success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('upload_error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Create New Module</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <h5><i class="fas fa-info-circle"></i> Upload Instructions</h5>
                        <p class="mb-2">Please create a ZIP file containing all your CSV files and upload it here. This is the only way to upload module data.</p>
                        <p class="mb-0"><strong>Required files in ZIP:</strong> chr.csv, chrsupp.csv, col.csv, ind.csv, r_pval.csv, r_ratio.csv, v_ind.csv, row.csv, val.csv, and at least one density_#.csv file.</p>
                    </div>

                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.moduleName, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.moduleName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.moduleName) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.csvZipFile, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.csvZipFile, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.csvZipFile) }}
                            <div class="form-text">{{ form_help(form.csvZipFile) }}</div>
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_widget(form.makePublic, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.makePublic, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(form.makePublic) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Module</button>
                        </div>
                    {{ form_end(form) }}

                    <div class="mt-4">
                        <h5>Required Files in ZIP:</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-success">Required Files:</h6>
                                <ul class="list-unstyled">
                                    <li>✓ <strong>chr.csv</strong> - Chromosome data</li>
                                    <li>✓ <strong>chrsupp.csv</strong> - Chromosome supplement data</li>
                                    <li>✓ <strong>col.csv</strong> - Column data</li>
                                    <li>✓ <strong>ind.csv</strong> - Index data</li>
                                    <li>✓ <strong>r_pval.csv</strong> - R p-value data</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-success">Required Files (cont.):</h6>
                                <ul class="list-unstyled">
                                    <li>✓ <strong>r_ratio.csv</strong> - R ratio data</li>
                                    <li>✓ <strong>row.csv</strong> - Row data (creates pos, alias, allele, and maf tables)</li>
                                    <li>✓ <strong>v_ind.csv</strong> - Variant index data</li>
                                    <li>✓ <strong>val.csv</strong> - Value data (creates pval and ratio tables)</li>
                                    <li>✓ <strong>At least 1 density_#.csv</strong> - Density data files</li>
                                </ul>
                            </div>
                        </div>
                        
                        <h6 class="text-info mt-3">Optional Files:</h6>
                        <ul class="list-unstyled">
                            <li>○ <strong>radius_ind.csv</strong> - Radius index data</li>
                        </ul>
                        
                        <h5 class="mt-3">Guidelines:</h5>
                        <ul class="list-unstyled">
                            <li>✓ Module name and description are required</li>
                            <li>✓ ZIP file must contain all required CSV files</li>
                            <li>✓ File size limit: 100MB</li>
                            <li>✓ Choose whether to make the module public or private</li>
                        </ul>
                        
                        <div class="alert alert-warning mt-3">
                            <h6><i class="fas fa-exclamation-triangle"></i> Important Notes:</h6>
                            <ul class="mb-0">
                                <li>All CSV files must be in the root of the ZIP (not in subfolders)</li>
                                <li>File names must match exactly (case-sensitive)</li>
                                <li>At least one density_#.csv file is required</li>
                                <li>The system will automatically extract and process all files</li>
                            </ul>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a href="{{ path('gwatch_datasets') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-eye"></i> View Active Datasets
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

